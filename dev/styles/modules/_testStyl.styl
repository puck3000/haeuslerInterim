body
	min-height: 100vh
	center(900px)
img
	max-width: 100%

main
	center(900px)
	header 
		col(1/1)
		img
			col(1/3)
			shift(1/3)
			@media(max-width: 35rem)
				col(3/3)
				unshift()	
	section 
		col(1/1)
	footer 
		col(1/1)
		img
			col(4/6)
			shift(1/6)
			@media(max-width: 35rem)
				col(3/3)
				unshift()

/*
